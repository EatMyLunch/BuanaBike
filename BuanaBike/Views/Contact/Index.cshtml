@{
    ViewData["Title"] = "Contact Us";
}

<h1 class="display-4 text-center mb-5">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Get in Touch</h2>
                <p class="text-center mb-5">We'd love to hear from you! Choose your preferred method of contact below.</p>

                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="d-flex flex-column align-items-center">
                            <div class="bg-primary rounded-circle p-3 mb-3">
                                <i class="bi bi-envelope text-white" style="font-size: 2rem;"></i>
                            </div>
                            <h3 class="h5">Email</h3>
                            <p class="text-center"><a href="mailto:info@motorcycleclub.com" class="text-decoration-none">info@motorcycleclub.com</a></p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex flex-column align-items-center">
                            <div class="bg-success rounded-circle p-3 mb-3">
                                <i class="bi bi-whatsapp text-white" style="font-size: 2rem;"></i>
                            </div>
                            <h3 class="h5">WhatsApp</h3>
                            <p class="text-center"><a href="https://wa.me/6281234567890" class="text-decoration-none">+62 812-3456-7890</a></p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex flex-column align-items-center">
                            <div class="bg-info rounded-circle p-3 mb-3">
                                <i class="bi bi-telephone text-white" style="font-size: 2rem;"></i>
                            </div>
                            <h3 class="h5">Phone</h3>
                            <p class="text-center"><a href="tel:+6281234567890" class="text-decoration-none">+62 812-3456-7890</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Visit Us</h2>
                <p class="text-center mb-3">Buana Sagulung Batu Aji</p>
                <p class="text-center">Jalan Raya Utama No. 123<br>Jakarta 12345, Indonesia</p>
            </div>
        </div>
    </div>
</div>
